<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/editButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:focusable="true"/>

    <Button
            android:text="@string/delete"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/deleteButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="264dp" android:layout_marginBottom="124dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>