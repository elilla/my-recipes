<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.BottomNavigationView
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:itemBackground="@color/colorAccent" android:id="@+id/bottomNavigationView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/floatingActionButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:focusable="true"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="180dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/bottomNavigationView" android:layout_marginBottom="434dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:contentDescription="@string/recipe_images"/>
</android.support.constraint.ConstraintLayout>